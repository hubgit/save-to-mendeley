{
	"manifest_version": 2,
	"name": "Save to Mendeley",
	"version": "0.2",
	"description": "Add the current URL to Mendeley.",
	"permissions": ["tabs", "http://*/*", "https://*/*"],
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},
	"browser_action": {
		"default_icon": "img/icon16.png",
		"default_title": "Save the current page to Mendeley"
	},
	"background": {
		"scripts": ["events.js"],
		"persistent": false
	}
}
